<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Divina Providencia</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/logo.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/images.jpg" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.html">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
			
			<% if(validacao.length >0){ %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<% for ( var i = 0; i < validacao.length; i++){%>
									<li><%= validacao[i].msg%></li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>
			<% } %>
	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="/funcionario/salvar" method="POST">
						<div class="form-group">
							<label for="nomeFuncionario">Funcionario:</label>
							<input type="text" class="form-control" id="nomeFuncionario" name="nomeFuncionario">
						</div>

						<div class="form-group">
							<label for="pwd">CPF Funcionario:</label>
							<input type="text" class="form-control" id="cpfFuncionario" name="cpfFuncionario">
						</div>
						
						<div class="form-group">
							<label for="pwd">Telefone Funcionario:</label>
							<input type="text" class="form-control" id="telefoneFuncionario" name="telefoneFuncionario">
						</div>

						<div class="form-group">
							<label for="pwd">Email Funcionario:</label>
							<input type="text" class="form-control" id="emailFuncionario" name="emailFuncionario">
						</div>

						<div class="form-group">
							<label for="pwd">Login Funcionario:</label>
							<textarea class="form-control" id="loginFuncionario" name="loginFuncionario"></textarea>
                        </div>
                        
                        <div class="form-group">
							<label for="pwd">Senha Funcionario:</label>
							<textarea class="form-control" id="senhaFuncionario" name="senhaFuncionario"></textarea>
						</div>


						<button type="submit" class="btn btn-default">Cadastrar</button>
						</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>