	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%= pedidos[0].cidadeCliente %></span>
		    			<a href="pedido?idPedidos=<%= pedidos[0].idPedidos %>" class="noticia_titulo"><%= pedidos[0].nomeCliente %></a>
		    			<span class="noticia_data"><%= pedidos[0].dataPedido %></span>
		    			<br />
